const readline = require("readline");

const reader = readline.createInterface({
  input: process.stdin,
  output: process.stdout,
});

const random = Math.floor(Math.random() * 100) + 1;

function start() {
  console.log(`Welcome!
  You have to find the right number, between 1 and 100!
  Good luck!!\n`);

  numberGame();
}

function numberGame() {
  // code here
  reader.question("Enter a number\n", (number) => {
    if (number == random) {
      console.log("you win");
      reader.close();
    } else if (number < 1 || number > 100) {
      console.log("The number is between 1 and 100\n");
      numberGame();
    } else if (number > random) {
      console.log("too high trop haut \n");
      numberGame();
    } else {
      console.log("too low trop bas \n");
      numberGame();
    }
  });
}

start();
